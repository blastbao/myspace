{{ define "main" }}
<div class="row justify-content-center">

    <!-- tag name -->
    <div class="col-md-12">
        <h1 style="text-align: left;">
            {{ .Data.Singular | humanize }}: {{ lower .Title | markdownify }}
        </h1>
        <hr/>
    </div>

    <!-- blogs list -->
    <div class="row justify-content-center">
        <div class="col-md-12">
            <article>

			<table border="0">

            {{ range .Paginator.Pages }}

                <!-- display blog list -->
				<tr>
					<td width="50%">
						<span><a href="{{ .Permalink }}">ã€Š{{ .Title }}ã€‹</a></span>
					</td>
					<td width="50%">
						{{ if .Params.tags }}
						{{ $len := (len .Params.tags) }}
							ðŸ”–{{ if gt $len 1 }}{{ end }}
							{{ range $index, $tag := .Params.tags }}
                            <font size="3">
							<a href="{{ "tags/" | relLangURL }}{{ . | urlize }}">
                                {{ . }}
                            </a>{{ if ne (add $index 1) $len }},{{ end }}
							{{ end }}
                            </font>
						{{ end }}
					</td>
				</tr>
			{{ end }}
			</table>

            </article>

            {{ template "_internal/pagination.html" . }}
        </div>
    </div>
</div>
{{ end }}

